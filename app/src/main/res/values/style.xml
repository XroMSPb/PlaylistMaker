<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TintedNavigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/medium_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="iconPadding">@dimen/small_padding</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_settings</item>
        <item name="android:padding">16dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>