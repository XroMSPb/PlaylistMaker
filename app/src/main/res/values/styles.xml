<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TintedNavigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="SettingsViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:padding">16dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SearchEditViewStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/search_text</item>
        <item name="android:textColorHint">?attr/colorOnContainer</item>
        <item name="android:inputType">text</item>
        <item name="android:drawableStart">@drawable/ic_search_small</item>
        <item name="android:drawableTint">?attr/colorOnContainer</item>
        <item name="android:drawablePadding">@dimen/dp8</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:focusedByDefault">true</item>
    </style>

    <style name="SearchTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SearchButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/dp16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/graphite_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp24</item>
    </style>

    <style name="PlayerTextLeft" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/light_silver</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
    </style>

    <style name="PlayerTextRight" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
    </style>

    <style name="PlaceholderText" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_19sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
    </style>

    <style name="BottomNavText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="new_playlist_text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/blue</item>
        <item name="boxStrokeColor">@drawable/edittext_with_stroke</item>
    </style>

    <style name="new_playlist_text_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>