<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="@dimen/dp61"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playlist_cover"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="@dimen/dp8"
        android:layout_marginStart="@dimen/dp12"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/ic_cover_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp8"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlist_name"
            style="@style/SearchTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp14"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_size_16sp"
            tools:text="Best of the best" />

        <TextView
            android:id="@+id/playlist_tracks"
            style="@style/SearchTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="?attr/colorSecondaryContainer"
            android:textSize="@dimen/text_size_11sp"
            tools:text="157 треков" />

    </LinearLayout>


</LinearLayout>