<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="56dp"
       android:layout_marginTop="4dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/default_margin"
          android:layout_marginTop="10dp"
          android:text="@string/app_name"
          android:textColor="@color/white"
          android:textSize="@dimen/text_normal"/>

   </FrameLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="24dp"
       android:layout_marginBottom="24dp"
       android:orientation="vertical"
       android:paddingStart="@dimen/default_margin"
       android:paddingEnd="@dimen/default_margin">

      <Button
          android:id="@+id/btn_search"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          app:cornerRadius="@dimen/btn_corner_radius"
          app:icon="@drawable/ic_search"
          app:iconGravity="textStart"
          app:iconTint="@color/main_iconTint"
          app:iconPadding="@dimen/main_btn_icon_padding"
          android:backgroundTint="@color/white"
          android:text="@string/searchBtn_text"
          android:textColor="@color/btn_text"
          android:textSize="@dimen/text_normal"
          android:textAllCaps="false"
          android:foreground="?attr/selectableItemBackground"/>

      <Button
          android:id="@+id/btn_library"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          app:cornerRadius="@dimen/btn_corner_radius"
          app:icon="@drawable/ic_library"
          app:iconGravity="textStart"
          app:iconTint="@color/main_iconTint"
          app:iconPadding="@dimen/main_btn_icon_padding"
          android:backgroundTint="@color/white"
          android:text="@string/libraryBtn_text"
          android:textColor="@color/btn_text"
          android:textSize="@dimen/text_normal"
          android:textAllCaps="false"/>

      <Button
          android:id="@+id/btn_settings"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          app:cornerRadius="@dimen/btn_corner_radius"
          app:icon="@drawable/ic_settings"
          app:iconGravity="textStart"
          app:iconTint="@color/main_iconTint"
          app:iconPadding="@dimen/main_btn_icon_padding"
          android:backgroundTint="@color/white"
          android:text="@string/settingsBtn_text"
          android:textColor="@color/btn_text"
          android:textSize="@dimen/text_normal"
          android:textAllCaps="false"/>

   </LinearLayout>

</LinearLayout >