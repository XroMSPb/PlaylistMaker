<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="@string/search_text"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="?attr/colorOnPrimary"
        app:contentInsetStartWithNavigation="0dp"
        android:foreground="?attr/selectableItemBackground"/>

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="@dimen/small_padding"
        android:layout_marginVertical="@dimen/large_padding"
        android:maxLines="1"
        android:hint="@string/search_text"
        android:textColorHint="?attr/colorOnSecondary"
        android:inputType="text"
        android:drawableStart="@drawable/search_icon"
        android:drawableTint="?attr/colorOnSecondary"
        android:drawablePadding="@dimen/small_padding"
        android:padding="@dimen/medium_padding"
        android:background="@drawable/edittext_background"
        android:textCursorDrawable="@color/cursor"
        android:autofillHints="" />

</LinearLayout>